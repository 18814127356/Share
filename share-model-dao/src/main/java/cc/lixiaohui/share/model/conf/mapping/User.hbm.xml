<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cc.lixiaohui.share.model.bean">
    <class name="User" table="user">
        <id name="id" type="int">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="username" type="java.lang.String">
            <column name="username" />
        </property>
        <property name="password" type="java.lang.String">
            <column name="password" />
        </property>
        <property name="sex" type="java.lang.String">
            <column name="sex" />
        </property>
        <property name="signature" type="java.lang.String">
            <column name="signature" />
        </property>
         <property name="registerTime" type="java.sql.Timestamp">
            <column name="register_time" />
        </property>
        <property name="selfForbid" type="boolean">
            <column name="self_forbid" />
        </property>
        <property name="adminForbid" type="boolean">
            <column name="admin_forbid" />
        </property>
        <property name="deleted" type="boolean">
            <column name="deleted" />
        </property>
        
        <!-- <one-to-one name="headImage" class="cc.lixiaohui.share.model.bean.Picture" foreign-key="head_image_id" />
         -->
        <many-to-one name="role" class="cc.lixiaohui.share.model.bean.Role" fetch="join">
            <column name="role_id" />
        </many-to-one>
        <many-to-one name="headImage" class="cc.lixiaohui.share.model.bean.Picture" fetch="join">
            <column name="head_image_id" />
        </many-to-one>
        <!-- <one-to-many name="shares" class="cc.lixiaohui.share.model.bean.Share" foreign-key="user_id" />
         -->
        <bag name="shares" inverse="true" >
           <key column="user_id"></key>
           <one-to-many class="cc.lixiaohui.share.model.bean.Share"></one-to-many>
        </bag>
        <!-- <one-to-many name="shareCollections" class="cc.lixiaohui.share.model.bean.ShareCollection" 
        foreign-key="user_id" />
         -->
        <bag name="shareCollections" inverse="true" >
           <key column="user_id"></key>
           <one-to-many class="cc.lixiaohui.share.model.bean.ShareCollection"></one-to-many>
        </bag>
        <!-- <one-to-many name="userCollections" class="cc.lixiaohui.share.model.bean.UserCollection" 
        foreign-key="user_id" />
         -->
        <bag name="userCollections" inverse="true">
           <key column="user_id"></key>
           <one-to-many class="cc.lixiaohui.share.model.bean.UserCollection"></one-to-many>
        </bag>
         <!-- <one-to-many name="commentsByMe" class="cc.lixiaohui.share.model.bean.Comment" 
        foreign-key="user_id" />
         -->
        <bag name="commentsByMe" inverse="true" >
           <key column="user_id"></key>
           <one-to-many class="cc.lixiaohui.share.model.bean.Comment"></one-to-many>
        </bag>
         <!-- <one-to-many name="commentsForMe" class="cc.lixiaohui.share.model.bean.Comment" 
        foreign-key="user_id" />
         -->
        <bag name="commentsForMe" inverse="true" >
           <key column="user_id"></key>
           <one-to-many class="cc.lixiaohui.share.model.bean.Comment"></one-to-many>
        </bag>
        
        
    </class>
</hibernate-mapping>
