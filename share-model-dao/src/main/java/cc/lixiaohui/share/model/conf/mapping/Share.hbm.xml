<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cc.lixiaohui.share.model.bean">
	<class name="Share" table="share">
		<id name="id" type="int">
			<column name="id" />
			<generator class="native" />
		</id>
	<!-- 	<property name="publisher" type="cc.lixiaohui.share.model.bean.User">
			<column name="user_id" />
		</property> -->
		<one-to-one name="publisher" class="cc.lixiaohui.share.model.bean.User"
			fetch="join" foreign-key="user_id">
		</one-to-one>
		<property name="content" type="java.lang.String">
			<column name="content" />
		</property>
		<property name="createTime" type="java.sql.Timestamp">
			<column name="create_time" />
		</property>
		<property name="praiseCount" type="int">
			<column name="praises" />
		</property>
		<property name="deleted" type="boolean">
			<column name="deleted" />
		</property>

		<!-- one to many -->
		<bag name="praises" inverse="true">
			<key column="share_id"></key>
			<one-to-many class="cc.lixiaohui.share.model.bean.Praise"></one-to-many>
		</bag>
		<bag name="comments" inverse="true">
			<key column="share_id"></key>
			<one-to-many class="cc.lixiaohui.share.model.bean.Comment"></one-to-many>
		</bag>
	</class>

</hibernate-mapping>
