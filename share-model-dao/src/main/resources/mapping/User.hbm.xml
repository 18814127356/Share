<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cc.lixiaohui.share.model.bean">
	<class name="User" table="user">
		<id name="id" type="int">
			<column name="id" />
			<generator class="native" />
		</id>
		<property name="username" type="java.lang.String">
			<column name="username" />
		</property>
		<property name="password" type="java.lang.String">
			<column name="password" />
		</property>
		<property name="sex" type="java.lang.String">
			<column name="sex" />
		</property>
		<property name="signature" type="java.lang.String">
			<column name="signature" />
		</property>
		<property name="registerTime" type="java.sql.Timestamp">
			<column name="register_time" />
		</property>
		<property name="selfForbid" type="boolean">
			<column name="self_forbid" />
		</property>
		<property name="adminForbid" type="boolean">
			<column name="admin_forbid" />
		</property>
		<property name="deleted" type="boolean">
			<column name="deleted" />
		</property>

		<many-to-one name="role" class="Role" fetch="select" column="role_id" lazy="false"/> 
		<many-to-one name="headImage" class="Picture" fetch="select" column="head_image_id" lazy="false"/>

		<!-- <one-to-one name="role" class="Role" fetch="join" foreign-key="role_id" />
		<one-to-one name="headImage" class="Picture" fetch="select" foreign-key="head_image_id" /> -->

		<bag name="shares" inverse="true" fetch="select">
			<key column="user_id" />
			<one-to-many class="Share" />
		</bag>
		<bag name="shareCollections" inverse="true" fetch="select">
			<key column="user_id" />
			<one-to-many class="ShareCollection" />
		</bag>
		<bag name="userCollections" inverse="true" fetch="select">
			<key column="user_id" />
			<one-to-many class="UserCollection" />
		</bag>
		<bag name="commentsByMe" inverse="true" fetch="select">
			<key column="user_id" />
			<one-to-many class="Comment" />
		</bag>
		<bag name="commentsForMe" inverse="true" fetch="select">
			<key column="user_id" />
			<one-to-many class="Comment" />
		</bag>
	</class>
</hibernate-mapping>
